<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08213F"
    android:orientation="vertical">
    <!--顶部信息栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#001529"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="小金县美兴镇新街村"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="负责人：张三 13812345678"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:drawableRight="@drawable/ic_logout"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:paddingHorizontal="10dp"
            android:background="@drawable/selector_bt_background"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#ffffffff"
            android:textSize="10sp" />
    </LinearLayout>

    <!--通知栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#112D48"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_notice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="通知"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white" />

        <com.example.xueliang.view.MarqueeTextView
            android:id="@+id/mtv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            tools:text="为贯彻落实《中共中央国务院关于坚持农业农村优先发展好“三农”工作的若干意见》《中共中央办公厅 国务院办公厅关于加强和改进乡村治理的指导见》的求，中央农办、农业农村部、中央宣传部、民政部、司法部等部门从2019年起组织开展乡村治理示范村镇创建活动，通过示范创建活动推动健全党组织领导的自治、法治、德治相结合的乡村治理体系，培育和树立一批乡村治理典型，发挥其引领示范和辐射带动作用，进一步促进乡村治理体系和治理能力现代化。现将有关事项通知如下。为贯彻落实《中共中央 国务院关于坚持农业农村优先发展做好“三农”工作的若干意见》《中共中央办公厅 国务院办公厅关于加强和改进乡村治理的指导意见》的要求，中央农办、农业农村部、中央宣传部、民政部、司法部等部门从2019年起组织开展乡村治理示范村镇创建活动，通过示范创建活动推动健全党组织领导的自治、法治、德治相结合的乡村治理体系，培育和树立一批乡村治理典型，发挥其引领示范和辐射带动作用，进一步促进乡村治理体系和治理能力现代化。现将有关事项通知如下。"
            android:textColor="#ffffffff"
            android:textSize="10sp" />
    </LinearLayout>


    <!--视频和公告栏-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:focusable="true"
            android:layout_height="match_parent"
            android:layout_weight="49"
            android:background="@drawable/ic_main_background">

            <LinearLayout
                android:id="@+id/ll_monitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_video" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="监控视频"
                    android:textColor="#ffffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="22"
            android:background="#112D48"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"
                android:text="公告"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!--阅读页面-->
            <com.example.xueliang.view.readview.PageView
                android:id="@+id/read_pv_page"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:clickable="true"/>

            <LinearLayout
                android:id="@+id/dot_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

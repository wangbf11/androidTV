<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_cun_item"
    android:layout_width="match_parent"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_blue_background"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:background="@drawable/selector_blue_background"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_town"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新美镇"
            android:textSize="12sp"
            android:textColor="#fff"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_arrow_right"/>
    </LinearLayout>

    <com.yan.tvprojectutils.FocusRecyclerView
        android:id="@+id/rv_cun"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
</LinearLayout>

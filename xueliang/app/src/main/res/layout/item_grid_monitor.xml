<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_grid"
    android:background="@drawable/bg_white_boder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <tv.danmaku.ijk.media.player.widget.IjkVideoView
        android:id="@+id/point_surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--顶部信息栏-->
    <LinearLayout
        android:id="@+id/point_top"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#40000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/point_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            tools:text="2019-12-25 13:25:30  星期三"
            android:textColor="#ffffffff"
            android:textSize="10sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/point_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            tools:text=" 美兴镇-新街社区-监控点位1"
            android:textColor="#ffffffff"
            android:textSize="10sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
